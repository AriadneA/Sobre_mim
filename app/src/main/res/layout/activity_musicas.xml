<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#48D1CC"
    android:fillViewport="true"
    tools:context=".View.View.MusicasActivity"
    >
<GridLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
   >
    <ImageView
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="fitStart"
        android:layout_columnSpan="5"
        app:srcCompat="@mipmap/ic_banner_foreground"
        />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="0"
        android:text="MÃºsicas e cantores favoritos"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:textSize="28dp"
        android:textStyle="bold"
        android:layout_columnSpan="1"
        />
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_column="0"
        android:layout_row="2"
        >

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <ImageButton
                android:id="@+id/btlittlemix"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:scaleType="fitXY"
                android:layout_row="2"
                android:layout_column="0"
                android:backgroundTint="#00FFFFFF"
                app:srcCompat="@drawable/littlemix" />
            <ImageButton
                android:id="@+id/btjustin"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:scaleType="fitXY"
                android:layout_row="2"
                android:layout_column="1"
                android:backgroundTint="#00FFFFFF"
                app:srcCompat="@drawable/justin" />
            <ImageButton
                android:id="@+id/btdualipa"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:scaleType="fitXY"
                android:layout_row="2"
                android:layout_column="2"
                android:backgroundTint="#00FFFFFF"
                app:srcCompat="@drawable/dualipa" />

            <ImageButton
                android:id="@+id/bted"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:scaleType="fitXY"
                android:layout_row="2"
                android:layout_column="3"
                android:backgroundTint="#00FFFFFF"
                app:srcCompat="@drawable/ed" />
            <ImageButton
                android:id="@+id/btfivesos"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:scaleType="fitXY"
                android:layout_row="2"
                android:layout_column="4"
                android:backgroundTint="#00FFFFFF"
                app:srcCompat="@drawable/fivesos" />
            <ImageButton
                android:id="@+id/btharry"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:scaleType="fitXY"
                android:layout_row="3"
                android:layout_column="0"
                android:backgroundTint="#00FFFFFF"
                app:srcCompat="@drawable/harry" />
            <ImageButton
                android:id="@+id/btlaroi"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:scaleType="fitXY"
                android:layout_row="3"
                android:layout_column="1"
                android:backgroundTint="#00FFFFFF"
                app:srcCompat="@drawable/laroi" />
            <ImageButton
                android:id="@+id/btolivia"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:scaleType="fitXY"
                android:layout_row="3"
                android:layout_column="2"
                android:backgroundTint="#00FFFFFF"
                app:srcCompat="@drawable/olivia" />
            <ImageButton
                android:id="@+id/btshawn"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:scaleType="fitXY"
                android:layout_row="3"
                android:layout_column="3"
                android:backgroundTint="#00FFFFFF"
                app:srcCompat="@drawable/shawn" />
            <ImageButton
                android:id="@+id/bttaylor"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:scaleType="fitXY"
                android:layout_row="3"
                android:layout_column="4"
                android:backgroundTint="#00FFFFFF"
                app:srcCompat="@drawable/taylor" />
        </GridLayout>
    </HorizontalScrollView>

    <RelativeLayout
        android:layout_row="5"
        android:layout_column="0"
        >

        <Button
            android:id="@+id/btvoltar2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="@drawable/botao1"
            android:text="voltar"
            tools:ignore="RtlCompat" />

    </RelativeLayout>
</GridLayout>
</ScrollView>